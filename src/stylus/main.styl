/** Stylus Styles */
@import '../../node_modules/vuetify/src/stylus/main'
.parallax-text
  text-shadow: 1px 1px 2px black


.number-box
  padding: 20px

#torn-image-border
  border-width: 100%
  border-style: solid
  border-image-slice: 50 0 50 0 fill
  border-image-width: 20 0 20 0
  width: 100%
  height: 60px

#navigation
  z-index: 3

*
  font-family: 'Oswald', sans-serif
  font-weight: bold

.selected-toolbar-item
  border-bottom: 5px solid #bd6f00

.bg
  width: 100%
  height: 800px

.clip-top
  margin-top: -50px

.coffee--text
  font-style: italic
  font-weight: 100
  color: #bd6f00

